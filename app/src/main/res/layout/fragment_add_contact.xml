<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddContactFragment">


    <EditText
        android:id="@+id/etNameFragmentAddContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPhoneFragmentAddContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter Phone"
        android:inputType="phone"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/etNameFragmentAddContact"
        app:layout_constraintStart_toStartOf="@+id/etNameFragmentAddContact"
        app:layout_constraintTop_toBottomOf="@+id/etNameFragmentAddContact" />

    <Button
        android:id="@+id/btnSaveContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        android:text="Save "
        app:layout_constraintEnd_toEndOf="@+id/etPhoneFragmentAddContact"
        app:layout_constraintStart_toStartOf="@+id/etPhoneFragmentAddContact"
        app:layout_constraintTop_toBottomOf="@+id/etPhoneFragmentAddContact" />
</androidx.constraintlayout.widget.ConstraintLayout>